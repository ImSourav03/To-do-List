<%- include("partials/header.ejs") %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>To-do (Today)</title>
</head>
<body id="mainBody">
  <div class="headerContents">
    <div class="greeting"> <h1> To Do List </h1></div>
    <div class="dayDateYear"><h2><%= currentDayDate %><h3> Add Your To-Do's Below </h3></h2></div>
  </div>
  <div class="mainContainer">
    <div class="flexContainer">
          <div class="checkBoxes">
        <% if (locals.newLabel){ 
              for(let i=0;i<updatedLen;i++){%>
              <div class="form-check">
                  <input class="form-check-input " type="checkbox" value="" id="flexCheckDefault">
                  <label class="form-check-label " for="flexCheckDefault" id="myText">
                    <p> <%= newLabel[i] %></p>
                  </label>
                  <hr class="hrWidth">
              </div>
        <% } } else{  %>
        <% } %>
        <div class="inputTodo">
        <form action="/submit" method="POST">
          <input class="checkBoxTxt" type="text" name="newItem" placeholder="New Item">
          <input class="checkBoxTxt btnCss" type="submit" value="Add">
        </form>
        </div>
          </div>
      </div>
    </div>
</body>
</html>
